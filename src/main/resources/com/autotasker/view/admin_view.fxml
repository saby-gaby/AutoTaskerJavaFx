<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.autotasker.controller.AdminViewController"
      stylesheets="@admin_view_styles.css"
      styleClass="admin-view" >

    <VBox styleClass="userSection">
        <HBox>
            <HBox HBox.hgrow="ALWAYS" styleClass="filter-checkbox">
                <Label text="Users" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            </HBox>
            <Button text="+ Create User" onAction="#showCreateUserWindow" />
        </HBox>
        <TableView fx:id="userTable" prefHeight="200">
            <columns>
                <TableColumn fx:id="usernameColumn" text="Username"/>
                <TableColumn fx:id="roleColumn" text="Role"/>
                <TableColumn fx:id="departmentColumn" text="Department"/>
                <TableColumn fx:id="editUserColumn" text="Edit" />
            </columns>
        </TableView>
    </VBox>

    <VBox styleClass="departmentSection">
        <HBox>
            <HBox HBox.hgrow="ALWAYS" styleClass="filter-checkbox">
                <Label text="Departments" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            </HBox>
            <Button text="+ Create Department" onAction="#showCreateDepartmentWindow" />
        </HBox>
        <TableView fx:id="departmentTable" prefHeight="200">
            <columns>
                <TableColumn fx:id="deptNameColumn" text="Name"/>
                <TableColumn fx:id="managerColumn" text="Manager"/>
                <TableColumn fx:id="editDepartmentColumn" text="Edit" />
            </columns>
        </TableView>
    </VBox>
</VBox>
