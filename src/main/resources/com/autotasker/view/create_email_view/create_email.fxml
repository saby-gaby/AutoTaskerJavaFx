<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<VBox fx:controller="com.autotasker.controller.CreateEmailController"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      stylesheets="@create_email_styles.css"
      styleClass="root">
    <HBox>
        <Label styleClass="labelBox" text="Email Address" />
        <TextField fx:id="emailField" promptText="example@example.com" />
    </HBox>

    <HBox>
        <Label styleClass="labelBox" text="Owner" />
        <ComboBox fx:id="ownerComboBox" promptText="Select User" />
    </HBox>

    <HBox styleClass="buttonBox" >
        <HBox HBox.hgrow="ALWAYS">
            <Button id="addDepartmentBtn" text="Add Department" onAction="#handleAddEmail"/>
        </HBox>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</VBox>