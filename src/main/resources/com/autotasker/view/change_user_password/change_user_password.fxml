<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<VBox fx:controller="com.autotasker.controller.ChangeUserPasswordController"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      stylesheets="@change_user_password_styles.css"
      styleClass="root">
    <Label fx:id="changePswInfo" />
    <VBox styleClass="changePasswordBox" >
        <VBox>
            <Label text="Current Password" />
            <PasswordField fx:id="oldPasswordField" />
        </VBox>
        <VBox>
            <Label text="Old Password" />
            <PasswordField fx:id="newPasswordField" />
        </VBox>
        <VBox>
            <Label text="Confirm Password" />
            <PasswordField fx:id="confirmedPasswordField" />
        </VBox>
    </VBox>
    <HBox styleClass="buttonBox">
        <Button fx:id="saveNewPsw" text="Save" />
        <Button text="Cancel" onAction="#handleClose" />
    </HBox>
</VBox>