<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<VBox fx:controller="com.autotasker.controller.EditUserPasswordController"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      style="-fx-spacing: 15; -fx-padding: 15; -fx-min-width: 400; -fx-alignment: center">
    <Label fx:id="changePswInfo" />
    <VBox maxWidth="200" spacing="10">
        <VBox>
            <Label text="New Password" />
            <PasswordField fx:id="passwordField" />
        </VBox>
        <VBox>
            <Label text="Confirm Password" />
            <PasswordField fx:id="confirmedPasswordField" />
        </VBox>
    </VBox>
    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="saveNewPsw" text="Save" />
        <Button text="Cancel" onAction="#handleClose" />
    </HBox>
</VBox>
