<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<VBox fx:controller="com.autotasker.controller.EditUserPasswordController"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      stylesheets="@edit_user_password_styles.css"
      styleClass="root">
    <Label fx:id="changePswInfo"/>
    <VBox styleClass="passwordBox" >
        <VBox>
            <Label text="New Password"/>
            <PasswordField fx:id="passwordField"/>
        </VBox>
        <VBox>
            <Label text="Confirm Password"/>
            <PasswordField fx:id="confirmedPasswordField"/>
        </VBox>
    </VBox>
    <HBox styleClass="buttonBox" >
        <Button fx:id="saveNewPsw" text="Save"/>
        <Button text="Cancel" onAction="#handleClose"/>
    </HBox>
</VBox>
