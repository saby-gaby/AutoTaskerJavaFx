<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>
<VBox fx:controller="com.autotasker.controller.EditEmailController"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      stylesheets="@edit_email_styles.css"
      styleClass="root">
    <HBox>
        <Label styleClass="labelBox" text="Email Address" />
        <TextField fx:id="emailField" />
    </HBox>
    <HBox>
        <Label styleClass="labelBox" text="Owner" />
        <ComboBox fx:id="ownerCombobox" />
    </HBox>

    <HBox styleClass="edit-window-buttons" >
        <Button fx:id="saveButton" text="Save" />
        <Button id="cancelButton" text="Cancel" onAction="#handleCancel" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="deleteButton" text="Delete Department" />
    </HBox>
</VBox>