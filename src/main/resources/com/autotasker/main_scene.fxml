<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.autotasker.Controller">
    <HBox spacing="10">
        <TextField fx:id="taskNameField" promptText="Task name" />
        <TextField fx:id="taskDescriptionField" promptText="Task description" />
        <DatePicker fx:id="dueDatePicker" />
        <Button onAction="#handleAddTask" text="Add Task" />
        <HBox alignment="TOP_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
            <TextField fx:id="searchField" layoutX="150" layoutY="10" promptText="Search tasks" />
        </HBox>
      <VBox.margin>
         <Insets />
      </VBox.margin>
      <padding>
         <Insets left="10.0" right="10.0" top="10.0" />
      </padding>
    </HBox>

    <TableView fx:id="taskTable" prefHeight="250">
        <columns>
            <TableColumn fx:id="rowNumberColumn" text="No." />
            <TableColumn fx:id="nameColumn" prefWidth="100" text="Name" />
            <TableColumn fx:id="descriptionColumn" prefWidth="250" text="Description" />
            <TableColumn fx:id="dueDateColumn" prefWidth="120" text="Due Date" />
            <TableColumn fx:id="statusColumn" text="Status" />
            <TableColumn fx:id="actionColumn" prefWidth="120" text="Actions" />
        </columns>
    </TableView>
    <ToolBar>
        <HBox alignment="TOP_LEFT" spacing="10" HBox.hgrow="ALWAYS">
            <CheckBox fx:id="filterIncompleteCheckBox" onAction="#loadTasks" text="Incompleted" />
            <CheckBox fx:id="filterCompleteCheckBox" onAction="#loadTasks" text="Completed" />
        </HBox>
        <HBox alignment="TOP_CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
            <Button onAction="#handleShowAllTasks" text="Show all" />
            <Button onAction="#handleShowUpcoming" text="Upcoming" />
        </HBox>
        <HBox alignment="TOP_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
            <DatePicker fx:id="filterDatePicker" promptText="MM/DD/YYYY" />
            <Button onAction="#handleFilterByDate" text="Filter for date" />
        </HBox>
<!--        "\u270E"-->
    </ToolBar>
</VBox>
